{
  "rules": {
    "admins": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && (($uid == auth.uid && !root.child('admins').exists()) || root.child('admins/' + auth.uid).val() == true)"
      }
    },
    "error-page": {
    	".read": true,
    	".write": "auth != true && root.child('admins/' + auth.uid).val() == true"
    },
    "home-page": {
    	".read": true,
    	".write": "auth != true && root.child('admins/' + auth.uid).val() == true"
    },
    "page-layouts": {
    	".read": true,
    	".write": "auth != true && root.child('admins/' + auth.uid).val() == true"
    },
    "page-types": {
    	".read": true,
    	".write": "auth != true && root.child('admins/' + auth.uid).val() == true"
    },
    "pages": {
    	".read": true,
    	".write": "auth != true && root.child('admins/' + auth.uid).val() == true"
    }
  }
}